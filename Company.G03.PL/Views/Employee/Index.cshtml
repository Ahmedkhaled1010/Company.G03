@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-success"> Add New Employee</a>
@if (Model.Count() > 0)
{
    <h1>All Employee</h1>
    <br />
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(d => d.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(d => d.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(d => d.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(d => d.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(d => d.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(d => d.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(d => d.HireDate)
                </th>
                <th>
                    @Html.DisplayNameFor(d => d.IsActive)
                </th>
                <th>
                    Details
                </th>
                <th>
                    Update
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>
                        @emp.Name
                    </td>
                    <td>
                        @emp.Age
                    </td>
                    <td>
                        @emp.Salary
                    </td>
                     <td>
                        @emp.Address
                    </td>
                    <td>
                        @emp.Email
                    </td>
                    <td>
                        @emp.PhoneNumber
                    </td>
                    <td>
                        @emp.HireDate
                    </td>
                    <td>
                        @emp.IsActive
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-Id="@emp.Id"><i class="fas fa-eye"></i></a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-Id="@emp.Id"><i class="fas fa-edit"></i></a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-Id="@emp.Id"><i class="fas fa-trash"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>
            There Is No Employees
        </h3>
    </div>
}
