
@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}
<a asp-action="Create" class="btn btn-success"> Create</a>
@if(Model.Count()>0)
{
    <h1>All Department</h1>
    <br />
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(d=>d.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(d=>d.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(d=>d.CreatedDate)
                </th>
                <th>
                    Details
                </th>
                <th>
                    Update
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var dept in Model)
            {
               <tr>
                  <td>
                        @dept.Code
                  </td>
                    <td>
                        @dept.Name
                    </td>
                    <td>
                        @dept.CreatedDate
                    </td>
                    <td>
                     <a asp-action="Details" asp-route-Id="@dept.Id"><i class="fas fa-eye"></i></a>
                    </td>
                    <td>
                       <a asp-action="Edit" asp-route-Id="@dept.Id"><i class="fas fa-edit"></i></a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-Id="@dept.Id"><i class="fas fa-trash"></i></a>

                    </td>
               </tr> 
            }
        </tbody>
    </table>
}else
{
    <div class="mt-5 alert alert-warning">
        <h3>
            There Is No Department
        </h3>
    </div>
}

